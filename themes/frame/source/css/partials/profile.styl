.profile 
    margin-top $margin-primary
    
    .profile-content 
        margin 0 $margin-l-0 0 0

        .profile-title
            margin-top 0
            margin-bottom $margin-m-0
            
        .profile-body
            margin-top 0
            margin-bottom $margin-l-1

        .profile-title
            text-style(heading-h1)

        .profile-body
            text-style(body-default)

        .profile-link
            margin-top 0
            margin-bottom $margin-m-1
            text-style(header)
    .profile-custom
        display flex
        flex-direction column
        align-items end
        .profile-custom-left
            display block
            border-radius 25px
            border none
            overflow hidden
            width 500px
            height 700px

        .profile-custom-right
            margin-top 1rem
            display flex
            flex-direction row
            justify-content space-between
            width 500px
            img
                width 100px

@media (max-width: 480px)
    .profile
        flex-wrap wrap
        
        .profile-content
            width 100%
            margin-top $margin-m-1
            
        .profile-image
            width 100%

        .profile-custom
            align-items center
            .profile-custom-left
                width 100%

            .profile-custom-right
                width 100%
                img
                    width 20vw