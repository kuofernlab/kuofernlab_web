.header
    border-bottom $line-secondary solid $color-text-primary
    text-style(header)
    font-size 1.3rem
    font-weight lighter

.header-inner
    display flex
    flex-wrap nowrap
    align-items end
    margin-top $margin-l-0
    margin-bottom $margin-m-0
    line-height initial
    #menu-btn
        display none

    .site-nav
        flex-grow 1

.menu-list
    text-align right
    display flex
    .menu-item
        position relative
        margin-left $margin-l-0

    &:before
        content ""
        flex-grow 1

.menu-item
    underline-motion(header)

.menu-item-active:after
    border-bottom solid $line-secondary 
    width 100%

@media (max-width: 688px)
    .header-inner
        flex-wrap wrap
        #menu-btn
            display block!important
            text-align right
            min-width 50%
            width auto
            .icon
                float right

        .site-brand-container
            min-width 50%
            width auto

        .site-nav
            width 100%
            .menu-list
                height 0
                overflow hidden
                .menu-item
                    margin-right 0
                    margin-left auto
                    margin-top $margin-m-0


            .active
                margin-top $margin-m-1
                height auto
                flex-direction column
                 

.site-brand-container
    font-size 3rem        
    width 20rem

    
