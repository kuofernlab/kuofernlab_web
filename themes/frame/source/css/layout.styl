body
  margin 0

/*
.mask-border::before 
  content ''
  width 100%
  height 100vh
  border $line-primary $color-text-primary solid
  position fixed
  top 0
  left 0
  pointer-events none
  z-index 8
*/

.mask-border
  position absolute
  width 100%
  z-index -1
  img
    width 50%
    transform scaleX(-1) rotate(30deg)
    margin-left 5%
    margin-top -10%

@media (max-width: 480px)
  .mask-border
    img
      width 100%
      transform unset

.wrapper
  display flex
  flex-direction column
  min-height 100vh

.main 
  flex-grow 1
  padding 0
  margin 0